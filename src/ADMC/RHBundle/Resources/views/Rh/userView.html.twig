{% extends "ADMCRHBundle::layout.html.twig" %}

{% block ADMCRH_body %}
    <p class="listUser">
    </p>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
       jQuery(document).ready(function($) {
            
            routine();
            function routine(){
                var form = $('.listUser');
                        $.ajax({
                            url: "{{ path('admcrh_request_refresh_list') }}",
                            data: form.serialize(),
                            error: function(jqXHR, textStatus, errorThrown) { $('.listUser').html('error') },
                            success: function(htmlResponse) { $('.listUser').html(htmlResponse) }
                        });
            }
             setInterval(routine, 4000);
            
            $(".clickable-row").click(function() {
             });
        });
    </script>
    
{% endblock %}