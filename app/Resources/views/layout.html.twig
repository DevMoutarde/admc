{# empty Twig template #}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name ="viewport" content="width=device-width,  initial-scale=1">
        
        <title> {% block title %} ADMC {% endblock %}</title>
        
        {% block stylesheets %}
            <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
            <link href="//netdna.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.css" rel="stylesheet">
        {% endblock %}
        
        
    </head>
    
    
    <body>
        
        <div class="container">
            <div class="jumbotron" id="header">
              <h1>ADMC Platform</h1>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    Connecté en tant que {{ app.user.username }}
                   {% endif %}
                
                <nav class="navbar navbar-default">
                <div class="container-fluid">
                  <div class="navbar-header">
                    <a class="navbar-brand" href="#">ADMC</a>
                  </div>
                  <ul class="nav navbar-nav">
                    <li class="active"><a href="{{ path('admc_core_homepage') }}">Home</a></li>
                    <li class="dropdown">
                      <a class="dropdown-toggle" data-toggle="dropdown" href="#">Dsi
                      <span class="caret"></span></a>
                      <ul class="dropdown-menu">
                          {{ render(controller("ADMCDSIBundle:Dsi:menu")) }}
                      </ul>
                    </li>
                    <li><a href="#">Page 2</a></li> 
                    <li><a href="#">Page 3</a></li>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        
                    <li><a href="{{ path('fos_user_security_logout') }}">Déconnexion</a></li>
                    {% else %}
                    <li><a href="{{ path('fos_user_security_login') }}">Connexion</a></li>
                    {% endif %}
                  </ul>
                </div>
              </nav>
            </div>
            
            <p>
                    
                
                
                </p>
            <div class="row">
                                
                <div id="content" class="col-md-9">
                    
                    {% block body %}
                    {% endblock %}
                    

                </div>
            </div>
                    
            <hr>
            
            <footer>
                <p>Projet développé par Mr Vougny, Mr Salles, Mr Nardizzi, Mr Fourcault. DATE: {{ 'now'|date('Y') }}</p>
            </footer>
        </div>
            
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.0.0.min.js"></script>
            <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
        
        {% endblock %}
        
        
        
    </body>
    
</html>